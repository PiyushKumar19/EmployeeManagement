                        <p class="text-xl font-semibold text-blue-800 hover:underline dark:text-white ">@item.ContactEmail</p>
                        <p class ="text-xl font-semibold text-blue-800 hover:underline dark:text-white ">@item.Age</p>
                        <p class="text-xl font-semibold text-blue-800 hover:underline dark:text-white ">@item.City</p>

